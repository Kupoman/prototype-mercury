{
    "$schema": "http://json-schema.org/draft-04/schema#",

    "type": "object",
    "properties": {
        "id" : {
            "type": "string"
        },
        "name" : {
            "type": "string"
        },
        "bam_file" : {
            "type": "string"
        },
        "root_node" : {
            "type": "string"
        },
        "anim_map": {
            "type": "object",
            "additionalProperties": {"type": "string"}
        },
        "abilities": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "minItems": 1,
            "maxItems": 4,
            "uniqueItems": true
        },
        "hp": {
            "type": "integer",
            "minimum": 0
        },
        "ap_per_second": {
            "type": "integer",
            "minimum": 0
        },
        "physical_attack": {
            "type": "integer",
            "minimum": 0
        },
        "magical_attack": {
            "type": "integer",
            "minimum": 0
        },
        "defense": {
            "type": "integer",
            "minimum": 0
        },
        "evasion": {
            "type": "integer",
            "minimum": 0
        },
        "accuracy": {
            "type": "integer",
            "minimum": 0
        },
        "hp_affinity": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
        },
        "physical_attack_affinity": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
        },
        "magical_attack_affinity": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
        },
        "defense_affinity": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
        },
        "evasion_affinity": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
        },
        "accuracy_affinity": {
            "type": "integer",
            "minimum": 1,
            "maximum": 5
        },
        "move_cost": {
            "type": "integer",
            "minimum": 0
        }
    },

    "required": [
        "id",
        "name",
        "bam_file",
        "root_node",
        "anim_map",
        "abilities",
        "hp",
        "ap_per_second",
        "physical_attack",
        "magical_attack",
        "defense",
        "evasion",
        "accuracy",
        "move_cost"
    ],

    "additionalProperties": false
}
